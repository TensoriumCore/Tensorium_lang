extern scalar takes_vector(vector)

field scalar phi
field vector v[i]

simulation {
  dimension = 1
  resolution = [4]

  time {
    dt = 0.1
    integrator = rk4
  }

  spatial {
    scheme = fd
    derivative = centered
    order = 2
  }
}

evolution ExternVarianceMismatch {
  dt phi = takes_vector(phi)
}
